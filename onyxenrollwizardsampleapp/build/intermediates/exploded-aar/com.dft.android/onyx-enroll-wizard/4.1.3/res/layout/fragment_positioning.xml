<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_positioning_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/onyx_guide_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/androidphone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.dft.onyx.guide.MainActivity$PlaceholderFragment" >

        <TextView
            android:id="@+id/fragment_positioning_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_positioning_header"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <View
            style="@style/Divider_Header"
            android:layout_below="@+id/fragment_positioning_header" />

        <RelativeLayout
            android:id="@+id/fragment_positioning_layout_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_positioning_header"
            android:layout_marginTop="10dp" >
            
            <View
                android:id="@+id/fragment_positioning_layout_view_center"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/fragment_position_anchor"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/fragment_positioning_layout_view_center"
                android:src="@drawable/position_anchor" />

            <TextView
                android:id="@+id/fragment_positioning_tip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/fragment_positioning_layout_view_center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/fragment_positioning_tip_1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/fragment_position_side_front"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_below="@+id/fragment_position_anchor"
                android:layout_centerVertical="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/fragment_positioning_layout_view_center"
                android:src="@drawable/position_side_front" />

            <ImageView
                android:id="@+id/fragment_position_top"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/fragment_position_anchor"
                android:layout_centerVertical="false"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fragment_positioning_layout_view_center"
                android:src="@drawable/position_top" />

            <ImageView
                android:id="@+id/fragment_position_side_back"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fragment_position_side_front"
                android:src="@drawable/position_side_back" />

            <TextView
                android:id="@+id/fragment_positioning_tip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentTop="false"
                android:layout_alignTop="@+id/fragment_position_side_back"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/fragment_position_side_back"
                android:padding="2dp"
                android:text="@string/fragment_positioning_tip_2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/AndroidstudioProjects/onyx-enroll-wizard/app/src/main/res/layout/fragment_positioning.xml -->