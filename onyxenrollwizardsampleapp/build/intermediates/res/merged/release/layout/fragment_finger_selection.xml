<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_finger_selection_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/onyx_guide_phone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:src="@drawable/androidphone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/background"
        tools:context="com.dft.onyx.guide.MainActivity$PlaceholderFragment" >

        <RelativeLayout
            android:id="@+id/fragment_finger_selection_layout_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <TextView
                android:id="@+id/fragment_finger_selection_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_finger_selection_header"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <View
                style="@style/Divider_Header"
                android:layout_below="@+id/fragment_finger_selection_header" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/fragment_finger_selection_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_finger_selection_layout_header"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:src="@drawable/select_finger"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>
