<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <CheckBox
        android:id="@+id/fragment_depth_cb_do_not_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_enroll_img"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/fragment_depth_text_checkbox"
        android:textColor="@color/white"
        android:visibility="visible" />

    <TextView
        android:id="@+id/fragment_enroll_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_enroll_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <View
        style="@style/Divider_Header"
        android:layout_below="@+id/fragment_enroll_header" />

    <ImageView
        android:id="@+id/fragment_enroll_img"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:layout_below="@+id/fragment_enroll_header"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/dftlogo4"
        android:visibility="visible" />

    <Button
        android:id="@+id/fragment_enroll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_depth_cb_do_not_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:text="@string/fragment_enroll_btn"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout><!-- From: file:/C:/AndroidstudioProjects/onyx-enroll-wizard/app/src/main/res/layout/fragment_enroll.xml -->